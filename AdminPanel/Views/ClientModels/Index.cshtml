@model IEnumerable<AdminPanel.Models.Models.NSI_Client.ClientModel>

@{
    ViewData["Title"] = "Clients";
}

<h1>Клиенты</h1>

<table id="clients" class="table">
    <thead>
        <tr>
            <th>
                <p>Фамилия</p>
                @*@Html.DisplayNameFor(model => model.surname)*@
            </th>
            <th>
                <p>Имя</p>
                @*@Html.DisplayNameFor(model => model.name)*@
            </th>
            <th>
                <p>Отчество</p>
                @*@Html.DisplayNameFor(model => model.patronymic)*@
            </th>
            <th>
                <p>Телефон</p>
                @*@Html.DisplayNameFor(model => model.phone)*@
            </th>
            <th>
                <p>Почта</p>
                @*@Html.DisplayNameFor(model => model.email)*@
            </th>
            <th>
                <p>Роль</p>
                @*@Html.DisplayNameFor(model => model.role)*@
            </th>
            <th>
                <p>Фото</p>
                @*@Html.DisplayNameFor(model => model.photo)*@
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.patronymic)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.email)
            </td>
            <td>
                <p>@item.role.GetText()</p>
            </td>
            <td>
                @{
                    var photoimage = item.photo;
                }
                <img src="https://drive.google.com/uc?export=view&id=@photoimage" width="100px" height="100px" />
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.id">Изменить</a> |
                <a asp-action="Delete" asp-route-id="@item.id">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
<script>
    $(document).ready(function () {
        $('#clients').DataTable();
    });
</script>
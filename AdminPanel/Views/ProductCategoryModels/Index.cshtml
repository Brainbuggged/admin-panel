@model IEnumerable<AdminPanel.Models.Models.NSI_Product.ProductCategoryModel>

@{
    ViewData["Title"] = "Products";
}

<h1>Товары</h1>

<p>
    <a asp-action="Create">Создать нового</a>
</p>
<table id="productCategory" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.parentid)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ru_name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.en_name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.is_last)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.photo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.parentid)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ru_name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.en_name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.is_last)
                </td>
                <td>
                    @{
                        var photoimage = item.photo;
                    }
                    <img src="https://drive.google.com/uc?export=view&id=@photoimage" width="100" height="100" />
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.id">Изменить</a> |
                    <a asp-action="Delete" asp-route-id="@item.id">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<script>
    $(document).ready(function () {
    $('#productCategory').DataTable();
    });
</script>  

@model IEnumerable<AdminPanel.Models.Models.NSI_Product.ProductCategoryModel>

@{
    ViewData["Title"] = "Products";
}

<h1>Категории товаров</h1>

<p>
    <a asp-action="Create">Создать новую категорию</a>
</p>
<table id="productCategory" class="display" style="width:100%">
    <thead>
        <tr>
            <th>
                <p>Наименование родительской подкатегории</p>
                @*@Html.DisplayNameFor(model => model.parentid)*@
            </th>
            <th>
                <p>Название</p>
                @*@Html.DisplayNameFor(model => model.ru_name)*@
            </th>
            <th
                <p>Название на английском</p>

                @*@Html.DisplayNameFor(model => model.en_name)*@
            </th>
            <th>
                <p>Является ли подкаталогом</p>
                @*@Html.DisplayNameFor(model => model.is_last)*@
            </th>
            <th>
                <p>Фото</p>
                @*@Html.DisplayNameFor(model => model.photo)*@
            </th>
            <th>
                <p>Действия</p>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    
                    @{
                        var text = string.Empty;
                        if (item.parentid != null && item.parentid != string.Empty)
                        {
                            text = Model.Where(x => x.id.ToString() == item.parentid).FirstOrDefault().ru_name;
                        }
                    }
                    <p>@text</p>
                </td>
                <td>
                    @{
                        var reference = "  http://budevice.ru/catalog/" + @Html.DisplayFor(modelItem => item.en_name);
                    }
                    <a href="@reference">@Html.DisplayFor(modelItem => item.ru_name)</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.en_name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.is_last)
                </td>
                <td>
                    @{
                        var photoimage = item.photo;
                    }
                    <img src="https://drive.google.com/uc?export=view&id=@photoimage" width="100" height="100" />
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.id">Изменить</a>
                    <a asp-action="Delete" asp-route-id="@item.id">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<script>
    $(document).ready(function () {
        $('#productCategory').DataTable({
            "language": jsonLanguageDataTable
        });
    });
</script>  
